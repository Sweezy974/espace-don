{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dons</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ don.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ don.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ don.description }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ don.category }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dons_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('dons_edit', { 'id': don.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
