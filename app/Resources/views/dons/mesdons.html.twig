{% extends 'base.html.twig' %}

{% block body %}
    

    <div class="container text-center">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="wrapper">
                <h2 style="color:white; "class="text-center">Liste de mes dons</h2>
    
        {% for don in mesdons %}
           
           
           
                
            <div class="row">
            <div class="col-md-12">
              <h4 style="color:white;">{{ don.name}} - {{ don.category }}</h4>
              <p style="color:white;">{{ don.description }}</p>
             
              <hr>
            </div>
          </div>
                    
           
           
           
        {% endfor %}
       
            {%  if is_granted('ROLE_PARTICULIER') %}
   
            <a href="{{ path('dons_new') }}" class="btn btn-danger">Faire un don</a>
            
            {% endif %}
      
            </div>
        </div>
    </div>
</div>

    
