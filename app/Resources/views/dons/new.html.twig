{% extends 'base.html.twig' %}

{% block body %}
    
        
        
    {{ form_start(form) }}
        
        <div class="container text-center">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="wrapper">
                <h3 class="text-center">Créer un don</h3>
                
                    <div class="form-group">
                        {{ form_label(form.name,  'Objet')}}<br/>
                        {{ form_widget(form.name)}}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.category, 'Catégorie')}}<br/>
                        {{ form_widget(form.category)}}
                    </div>
                    <div>
                        {{ form_label(form.description ,  'Description')}}<br/>
                        {{ form_widget(form.description)}}
                    </div>
                   
        <input class="btn btn-danger" type="submit" value="Créer" />
               
            </div>
        </div>
    </div>
</div>
        
    {{ form_end(form) }}

    
    
    
